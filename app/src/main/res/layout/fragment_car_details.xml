<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Car Photo -->
        <ImageView
            android:id="@+id/imageViewCar"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tayota_camry_xv80"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Левая часть: Название и Цена -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Brand and Model -->
                <TextView
                    android:id="@+id/textViewBrandModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toyota Camry XV70 (2022)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <!-- Price -->
                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 800 000 ₸"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Правая часть: Иконки Share и Like -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <!-- Share Icon -->
                <ImageView
                    android:id="@+id/imageViewShare"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share"
                    app:tint="#666666"/>

                <!-- Like Icon -->
                <ImageView
                    android:id="@+id/imageViewLike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_like"
                    android:layout_marginStart="16dp"
                    app:tint="#666666"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Mileage and Owners -->
        <TextView
            android:id="@+id/textViewMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mileage: 2,500 km"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewOwnersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owners count: 1"
            android:textSize="16sp"
            android:textColor="#444444" />

        <!-- Location -->
        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Almaty, Kazakhstan"
            android:textSize="16sp"
            android:textColor="#444444" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView android:id="@+id/textViewYear" style="@style/DetailItemStyle" android:text="Year: 2022" />
        <TextView android:id="@+id/textViewCondition" style="@style/DetailItemStyle" android:text="Condition: used" />
        <TextView android:id="@+id/textViewBodyType" style="@style/DetailItemStyle" android:text="Body Type: Sedan" />
        <TextView android:id="@+id/textViewDriveType" style="@style/DetailItemStyle" android:text="Drive Type: Front-Wheel Drive" />
        <TextView android:id="@+id/textViewEngineVolume" style="@style/DetailItemStyle" android:text="Engine Volume: 2.5 L / Petrol" />
        <TextView android:id="@+id/textViewHorsepower" style="@style/DetailItemStyle" android:text="Horsepower: 181 hp" />
        <TextView android:id="@+id/textViewTransmission" style="@style/DetailItemStyle" android:text="Transmission: Automatic" />
        <TextView android:id="@+id/textViewSteeringWheel" style="@style/DetailItemStyle" android:text="Steering Wheel: left" />
        <TextView android:id="@+id/textViewVIN" style="@style/DetailItemStyle" android:text="VIN: JTNB11HK7K3000001" />

        <!-- Exterior -->
        <TextView
            android:id="@+id/textViewExteriorFeatures"
            android:layout_height="12sp"
            android:layout_width="12sp"
            android:text="Exterior"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />
        <TextView style="@style/DetailItemStyle" android:text="• LED headlights" />
        <TextView style="@style/DetailItemStyle" android:text="• Alloy wheels" />
        <TextView style="@style/DetailItemStyle" android:text="• Sunroof" />
        <TextView style="@style/DetailItemStyle" android:text="• Chrome accents" />
        <TextView style="@style/DetailItemStyle" android:text="• Rear spoiler" />

        <!-- Interior -->
        <TextView
            android:id="@+id/textViewInteriorFeatures"
            android:layout_height="12sp"
            android:layout_width="12sp"
            android:text="Interior"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />
        <TextView style="@style/DetailItemStyle" android:text="• Leather seats" />
        <TextView style="@style/DetailItemStyle" android:text="• Touchscreen" />
        <TextView style="@style/DetailItemStyle" android:text="• Ambient lighting" />
        <TextView style="@style/DetailItemStyle" android:text="• Multifunction wheel" />

        <!-- Description -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toyota Camry XV70 — a stylish and reliable business-class sedan with minimal mileage."
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
    <!-- Fixed bottom buttons -->
    <LinearLayout
        android:id="@+id/fixedButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonWrite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Write"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_message_write"
            android:gravity="center"
            android:backgroundTint="@color/primary_red"
            android:textColor="@android:color/white"
            android:drawableTint="@color/white"
            />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_phone_call"
            android:gravity="center"
            android:backgroundTint="@color/primary_red"
            android:textColor="@android:color/white"
            android:drawableTint="@color/white"
            />

    </LinearLayout>
</FrameLayout>
